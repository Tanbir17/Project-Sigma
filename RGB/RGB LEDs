// Global Variables Red, Green, Blue Pins
const int Red_Pin = 6;  
const int Green_Pin = 5;
const int Blue_Pin = 3;
int Max_Brightness = 255;  //255 Max Brightness

void setup(){
  Serial.begin(9600);
  pinMode(Red_Pin, OUTPUT);
  pinMode(Green_Pin, OUTPUT);
  pinMode(Blue_Pin, OUTPUT);
}

void loop(){
  int Delay = 1000;
  int Long_Delay = 2000;
  int Fade_Delay = 500;
  int Short_Delay = 10;
  int Red_Value;
  int Green_Value;
  int Blue_Value;
 
  // Flash Colours 1,2,3 (Red, Green, Blue)
  // Colour 1 - Red
  setColor(Max_Brightness, 0, 0);
  delay(Delay);
  // Colour 2 - Blue
  setColor(0, 0, Max_Brightness);
  delay(Delay);
  // Colour 3 - Purple
  setColor(170, 0, Max_Brightness);
  delay(Delay);
  // Turn Sequence Off
  digitalWrite(Red_Pin, LOW)
  digitalWrite(Green_Pin, LOW)
  digitalWrite(Blue_Pin, LOW)
  delay(Long_Delay);

  // Fades Red to Blue
  for(int i = 0; i < 255; i += 1)
  {
    Red_Value -= 1;
    Blue_Value += 1;
    analogWrite(Red_Pin, Red_Value);
    analogWrite(Blue_Pin, Blue_Value);
    delay(Fade_Delay);
  }
  
}


void setColor(int Red_Value, int Green_Value, int Blue_Value){
  analogWrite(Red_Pin, Red_Value);
  analogWrite(Green_Pin, Green_Value);
  analogWrite(Blue_Pin, Blue_Value);
}
